<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>星際大戰 - 復古太空射擊遊戲</title>
    <style>
        body {
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #000;
            overflow: hidden;
        }
        #game-container {
            position: relative;
            width: 600px;
            height: 400px;
            background: #111;
            border: 2px solid #fff;
            overflow: hidden;
        }
        #player {
            position: absolute;
            width: 40px;
            height: 20px;
            background: #0f0;
            bottom: 10px;
            left: 280px;
        }
        .bullet {
            position: absolute;
            width: 4px;
            height: 10px;
            background: #ff0;
        }
        .enemy {
            position: absolute;
            width: 30px;
            height: 20px;
            background: #f00;
        }
        .enemy-bullet {
            position: absolute;
            width: 4px;
            height: 10px;
            background: #f0f;
        }
        #score {
            position: absolute;
            top: 10px;
            left: 10px;
            color: #fff;
            font-family: Arial, sans-serif;
            font-size: 20px;
        }
        #game-over {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #f00;
            font-size: 40px;
            font-family: Arial, sans-serif;
            display: none;
        }
    </style>
</head>
<body>
    <div id="game-container">
        <div id="player"></div>
        <div id="score">得分: 0</div>
        <div id="game-over">遊戲結束</div>
    </div>

    <script>
        const container = document.getElementById('game-container');
        const player = document.getElementById('player');
        const scoreDisplay = document.getElementById('score');
        const gameOverDisplay = document.getElementById('game-over');
        const containerWidth = container.offsetWidth;
        const containerHeight = container.offsetHeight;
        let playerX = 280;
        let bullets = [];
        let enemies = [];
        let enemyBullets = [];
        let score = 0;
        let gameOver = false;

        // 玩家移動
        document.addEventListener('keydown', (e) => {
            if (gameOver) return;
            if (e.key === 'ArrowLeft' && playerX > 0) playerX -= 10;
            if (e.key === 'ArrowRight' && playerX < containerWidth - 40) playerX += 10;
            if (e.key === ' ') shoot();
            player.style.left = playerX + 'px';
        });

        // 發射子彈
        function shoot() {
            const bullet = document.createElement('div');
            bullet.className = 'bullet';
            bullet.style.left = (playerX + 18) + 'px';
            bullet.style.bottom = '30px';
            container.appendChild(bullet);
            bullets.push(bullet);
        }

        // 生成敵人
        function spawnEnemy() {
            const enemy = document.createElement('div');
            enemy.className = 'enemy';
            enemy.style.left = Math.random() * (containerWidth - 30) + 'px';
            enemy.style.top = '0px';
            container.appendChild(enemy);
            enemies.push(enemy);

            // 敵人隨機射擊
            if (Math.random() < 0.1) {
                const bullet = document.createElement('div');
                bullet.className = 'enemy-bullet';
                bullet.style.left = (parseFloat(enemy.style.left) + 13) + 'px';
                bullet.style.top = '20px';
                container.appendChild(bullet);
                enemyBullets.push(bullet);
            }
        }

        // 遊戲更新邏輯
        function update() {
            if (gameOver) return;

            // 更新玩家子彈
            bullets.forEach((bullet, index) => {
                let bulletY = parseFloat(bullet.style.bottom) || 0;
                bulletY += 5;
                bullet.style.bottom = bulletY + 'px';
                if (bulletY > containerHeight) {
                    bullet.remove();
                    bullets.splice(index, 1);
                }

                // 碰撞檢測（子彈擊中敵人）
                enemies.forEach((enemy, eIndex) => {
                    const bulletRect = bullet.getBoundingClientRect();
                    const enemyRect = enemy.getBoundingClientRect();
                    if (bulletRect.top < enemyRect.bottom &&
                        bulletRect.bottom > enemyRect.top &&
                        bulletRect.left < enemyRect.right &&
                        bulletRect.right > enemyRect.left) {
                        enemy.remove();
                        bullet.remove();
                        enemies.splice(eIndex, 1);
                        bullets.splice(index, 1);
                        score += 10;
                        scoreDisplay.textContent = `得分: ${score}`;
                    }
                });
            });

            // 更新敵人
            enemies.forEach((enemy, index) => {
                let enemyY = parseFloat(enemy.style.top) || 0;
                enemyY += 2;
                enemy.style.top = enemyY + 'px';
                if (enemyY > containerHeight) {
                    enemy.remove();
                    enemies.splice(index, 1);
                }
            });

            // 更新敵人子彈
            enemyBullets.forEach((bullet, index) => {
                let bulletY = parseFloat(bullet.style.top) || 0;
                bulletY += 3;
                bullet.style.top = bulletY + 'px';
                if (bulletY > containerHeight) {
                    bullet.remove();
                    enemyBullets.splice(index, 1);
                }

                // 碰撞檢測（敵人子彈擊中玩家）
                const playerRect = player.getBoundingClientRect();
                const bulletRect = bullet.getBoundingClientRect();
                if (bulletRect.top < playerRect.bottom &&
                    bulletRect.bottom > playerRect.top &&
                    bulletRect.left < playerRect.right &&
                    bulletRect.right > playerRect.left) {
                    gameOver = true;
                    gameOverDisplay.style.display = 'block';
                }
            });
        }

        // 遊戲循環
        setInterval(() => {
            if (!gameOver) spawnEnemy();
        }, 1000); // 每秒生成一個敵人
        setInterval(update, 1000 / 60); // 每秒 60 幀更新

    </script>
</body>
</html>
